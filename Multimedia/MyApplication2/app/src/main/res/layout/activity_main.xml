<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="1"
        android:backgroundTint="@android:color/holo_blue_bright"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="2"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_below="@+id/btn1"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="3"
        android:backgroundTint="@android:color/holo_red_light"
        android:layout_toRightOf="@+id/btn1"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="4"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:layout_alignBottom="@id/btn2"/>

    <Button
        android:id="@+id/btn5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="5"
        android:backgroundTint="@android:color/holo_orange_light"
        android:layout_alignBottom="@id/btn2"
        android:layout_toRightOf="@+id/btn2"/>

    <Button
        android:id="@+id/btn6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="6"
        android:backgroundTint="@android:color/holo_purple"
        android:layout_below="@id/btn2"
        android:layout_alignRight="@id/btn2"/>

    <Button
        android:id="@+id/btn7"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="7"
        android:backgroundTint="@android:color/holo_red_light"
        android:layout_below="@id/btn6"
        android:layout_alignLeft="@id/btn6"/>

    <Button
        android:id="@+id/btn8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="8"
        android:backgroundTint="@android:color/holo_purple"
        android:layout_below="@id/btn7"/>

    <Button
        android:id="@+id/btn9"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="9"
        android:backgroundTint="@android:color/black"
        android:layout_toRightOf="@id/btn8"
        android:layout_alignBottom="@id/btn8"/>

    <Button
        android:id="@+id/btn10"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="10"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_toRightOf="@id/btn9"
        android:layout_alignTop="@id/btn8"/>

    <Button
        android:id="@+id/btnLOREM"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="LOREM"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_below="@id/btn10"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/btnIPSUM"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="IPSUM"
        android:backgroundTint="@android:color/holo_orange_light"
        android:layout_alignBaseline="@id/btnLOREM"
        android:layout_toRightOf="@id/btnLOREM"/>

</RelativeLayout>